<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <StartupObject>Sub Main</StartupObject>
    <!--Before packaging msix, specify single TargetFramework-->
    <TargetFramework>net6.0-windows10.0.17763.0</TargetFramework>
    <!--<TargetFrameworks>net6.0;net6.0-windows</TargetFrameworks>-->
    <RootNamespace></RootNamespace>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'!='net6.0'">
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="My Project\**" />
    <EmbeddedResource Remove="My Project\**" />
    <None Remove="My Project\**" />
  </ItemGroup>
  <ItemGroup Label="Project References">
    <ProjectReference Include="..\..\Scripting\VisualBasic\Microsoft.CodeAnalysis.VisualBasic.Scripting.vbproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Nukepayload2.SourceGenerators.IgnoresAccessChecksTo" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>
  <ItemGroup>
    <InternalsAssemblyName Include="Microsoft.CodeAnalysis" />
  </ItemGroup>
  <ItemGroup>
    <None Include="App.config" />
    <None Include="vbi.coreclr.rsp" Condition="'$(TargetFramework)' == 'net6.0'">
      <Link>vbi.rsp</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="vbi.desktop.rsp" Condition="'$(TargetFramework)' != 'net6.0'">
      <Link>vbi.rsp</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <None Update="Demo.vbx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>